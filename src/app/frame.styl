.main-header
	width 100%
	position fixed
	overflow hidden
	border-bottom 1px solid 
	height 60px
	background $bg
	z-index 100
	h1
		margin 8px
		
.main-nav
	position fixed
	top 60px
	bottom 0px
	width 160px
	border-right 1px solid
	cursor default
	overflow auto
	background $bg
	z-index 100
	header, li
		border-bottom 1px solid
		padding 5px 15px
		text-align center
	header
		position: relative
		font-weight bold
		i
			position: absolute
			right: 15px
			top: 7px
			color $click
			&.rotate
				transform rotate(90deg)
	li
		text-align right
		cursor pointer
		&::selection
			background none
		&.active
			background $click
			color #fff
			
.main-frame
	margin 60px 0 0 160px
	overflow auto
	
.btn-group
	width 100%
	margin 10px
	
.logout
	position absolute
	top 20px
	right 20px
	color $click
	cursor pointer
	
.form-wrap
	padding 25px
	
.row
	padding 5px
.btn-row
	margin 20px
.pagination
	margin 0 0 0 20px
	.pagination-li
		width 45px
	
.go-back
	color $click
	margin 5px
	cursor pointer
.form-group
	min-height 34px
	margin-bottom 15px !important
	label
		width 100px
.form-repeat-wrap
	display inline-block
	width 180px